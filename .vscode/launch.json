{
    "configurations": [
        {
            "name": "C/C++: g++.exe build and debug all files",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\..\\build\\board_cpp.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\programs\\c_compiler\\ucrt64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build all files"
        },
        {
            "name": "Python Debugger: Main File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/board_py/src/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        }
    ],
    "version": "2.0.0"
}